{
  "name": "tutorial-pdf-video-generator",
  "version": "2.0.0",
  "description": "Generate professional PDF and MP4 video tutorials from Markdown. Shadcn dark cover, auto TOC, 144fps video, base64-embedded images.",
  "type": "module",
  "bin": {
    "tutorial-pdf": "./src/cli.mjs"
  },
  "main": "./src/export-pdf.mjs",
  "exports": {
    ".": "./src/export-pdf.mjs",
    "./video": "./src/export-video.mjs",
    "./themes/*": "./src/themes/*"
  },
  "scripts": {
    "generate": "node src/cli.mjs",
    "generate:video": "node src/cli.mjs --video",
    "generate:all": "node src/cli.mjs --pdf --video",
    "example": "node src/cli.mjs --config example/tutorial.config.js"
  },
  "keywords": [
    "tutorial",
    "pdf",
    "video",
    "markdown",
    "generator",
    "documentation",
    "screenshots",
    "playwright",
    "ffmpeg",
    "shadcn",
    "mp4"
  ],
  "author": "CamiloIncba",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CamiloIncba/tutorial-pdf-video-generator.git"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "marked": "^17.0.0",
    "playwright": "^1.58.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
