{
  "name": "tutorial-pdf-video-generator",
  "version": "1.0.0",
  "description": "Generate professional PDF tutorials from Markdown with screenshots. Shadcn dark cover, auto TOC, base64-embedded images.",
  "type": "module",
  "bin": {
    "tutorial-pdf": "./src/cli.mjs"
  },
  "main": "./src/export-pdf.mjs",
  "exports": {
    ".": "./src/export-pdf.mjs",
    "./themes/*": "./src/themes/*"
  },
  "scripts": {
    "generate": "node src/cli.mjs",
    "example": "node src/cli.mjs --config example/tutorial.config.js"
  },
  "keywords": [
    "tutorial",
    "pdf",
    "markdown",
    "generator",
    "documentation",
    "screenshots",
    "playwright",
    "shadcn"
  ],
  "author": "CamiloIncba",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CamiloIncba/tutorial-pdf-video-generator.git"
  },
  "dependencies": {
    "marked": "^17.0.0",
    "playwright": "^1.58.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
